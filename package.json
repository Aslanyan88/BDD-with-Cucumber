{
  "name": "wdio-cucumber-project",
  "version": "1.0.0",
  "description": "A WebdriverIO project with Cucumber for BDD testing",
  "private": true,
  "keywords": [
    "wdio",
    "cucumber",
    "test",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:smoke": "wdio run ./wdio.conf.js --cucumberOpts.tags='@smoke'",
    "test:regression": "wdio run ./wdio.conf.js --cucumberOpts.tags='@regression'"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@wdio/cli": "^7.30.1",
    "@wdio/cucumber-framework": "^7.30.1",
    "@wdio/junit-reporter": "^9.15.0",
    "@wdio/local-runner": "^7.30.1",
    "@wdio/spec-reporter": "^7.30.1",
    "chromedriver": "^137.0.0",
    "wdio-chromedriver-service": "^8.1.1"
  }
}
